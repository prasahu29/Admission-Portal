

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

<br><br>
<section class="login-wrap mtb-40">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="login-box">
                    <h1>UPDATE Data</h1>
                    <form action="/admin_college/update/<%= data1._id %>" method="post">
                        <div class="form-group">
                            <input type="text" name="na" class="form-control" placeholder="name" value="<%= data1.name %>">
                        </div>
                        <div class="form-group">
                            <input type="text" name="em" class="form-control" placeholder="email" value="<%= data1.email %>">
                        </div>
                        <div class="form-group">
                            <input type="text" name="ph" class="form-control" placeholder="phone" value="<%= data1.number %>">
                        </div>
                        <div class="form-group">
                            <input type="text" name="a" class="form-control" placeholder="address" value="<%= data1.address %>">
                        </div>


                        <div class="form-group">
                            <select class="form-control" name="coll">
                                <option <%= data1.college =='ITM' ? 'selected' : ''  %>>ITM</option>
                                <option <%= data1.college =='IPS' ? 'selected' : ''  %>>IPS</option>
                                <option <%= data1.college =='IITM' ? 'selected' : ''  %>>IITM</option>
                                <option <%= data1.college =='MITS' ? 'selected' : ''  %>>MITS</option> 
                            </select>
                        </div>
                        
                        <div class="form-group">
                             
                            <select class="form-control" name="cour">
                                <option <%= data1.course =='B.Tech' ? 'selected' : ''  %>>B.TECH</option>
                                <option <%= data1.course =='M.TECH' ? 'selected' : ''  %>>M.TECH</option>
                                <option <%= data1.course =='MBA' ? 'selected' : ''  %>>MBA</option>
                                <option <%= data1.course =='LAW' ? 'selected' : ''  %>>LAW</option> 
                            </select>
                        </div>
                      
<br>
                        <div class="form-group">
                            <button class="btn btn-outline-primary">UPDATE</button>
                        </div>
                    </form>
                </div>         
            </div>
        </div>
    </div>
</section>